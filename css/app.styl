@import "nib"
@import "normalize-css/normalize.css"

@font-face
  font-family: 'Signika';
  font-style: normal;
  font-weight: 400;
  src: local('Signika'), local('Signika-Regular'), url('../font/Signika.woff') format('woff');

html
  font-family: 'Signika', 'Comic Sans MS', 'PT Sans', 'Eras Light ITC', Helvetica, Arial, sans-serif;
  font-size: 1px
  user-select: none

body
  font-size: 16px

#wrapper
  max-width: 533rem
  margin: 0 auto

#playing-view
  header
    height: 222rem
  footer
    height: 86rem

.plate
  background: #cfe6df
  box-sizing: border-box
  height: 714rem
  padding: 12rem 0 10rem
  border-top: 10rem solid #bcd9d9
  border-radius: 20rem
  overflow: hidden
  position: relative
  .bg .bg-tile
    height: 159rem
    width: 106rem
    border-radius: 10rem
    background: #bbd9d9
    position: relative
    float: left
    margin: 10rem 0 0 22rem

.tile
  height: 159rem
  width: 106rem
  background: #ffcc66
  border-radius: 10rem
  overflow: hidden
  position: absolute
  z-index: 5
  transition: all 0.2s
  .number
    width: 100%
    height: @height
    line-height: @height
    box-sizing: border-box
    font-size: 80rem
    border-radius: @border-radius
    position: absolute
    text-align: center
    top: -10rem
    padding-top: -@top
    background: #feffff
    color: #000
  &.num-1
    background: #60aaf1
    .number
      color: #fff
      background: #66ccff
  &.num-2
    background: #cc547c
    .number
      color: #fff
      background: #ff6881

@import "nib"
@import "normalize-css/normalize.css"

@font-face
  font-family: 'Signika';
  font-style: normal;
  font-weight: 400;
  src: local('Signika'), local('Signika-Regular'), url('../font/Signika.woff') format('woff');

html
  font-family: 'Signika', 'Comic Sans MS', 'PT Sans', 'Eras Light ITC', Helvetica, Arial, sans-serif;
  font-size: 1px
  user-select: none

body
  font-size: 16px

#wrapper
  max-width: 533rem
  margin: 0 auto

.plate
  background: #cfe6df
  box-sizing: border-box
  width: 533rem
  height: 714rem
  padding: 12rem 0 10rem
  border-top: 4rem solid #bcd9d9
  border-radius: 16rem
  overflow: hidden
  margin: 0 auto

.tile
  height: 159rem
  width: 106rem
  background: #ffcc66
  border-radius: 6rem
  position: relative
  overflow: hidden
  margin: 10rem 22rem
  .number
    width: 100%
    height: @height
    line-height: @height
    box-sizing: border-box
    font-size: 80rem
    border-radius: @border-radius
    position: absolute
    text-align: center
    top: -10rem
    padding-top: 10rem
    background: #feffff
    color: #000
  &.num-1
    background: #60aaf1
    .number
      color: #fff
      background: #66ccff
  &.num-2
    background: #cc547c
    .number
      color: #fff
      background: #ff6881

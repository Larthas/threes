@import "nib"
@import "normalize-css/normalize.css"
@import "magnific-popup/dist/magnific-popup.css"

@font-face
  font-family: 'Signika';
  font-style: normal;
  font-weight: 400;
  src: local('Signika'), local('Signika-Regular'), url('../font/Signika.woff') format('woff');

html
  font-family: 'Signika', 'Comic Sans MS', 'PT Sans', 'Eras Light ITC', Helvetica, Arial, sans-serif;
  font-size: 100px
  user-select: none

body
  font-size: 16px

#wrapper
  max-width: 5.33rem
  margin: 0 auto

#playing-view
  header
    height: 2.22rem
  footer
    height: .86rem

.plate
  background: #cfe6df
  box-sizing: border-box
  height: 7.14rem
  padding: .12rem 0 .10rem
  border-top: .10rem solid #bcd9d9
  border-radius: .36rem
  overflow: hidden
  position: relative
  .bg .bg-tile
    height: 1.59rem
    width: 1.06rem
    border-radius: .10rem
    background: #bbd9d9
    position: relative
    float: left
    margin: .10rem 0 0 .22rem

.tile
  height: 1.59rem
  width: 1.06rem
  background: #ffcc66
  border-radius: .10rem
  overflow: hidden
  position: absolute
  top: 0
  left: 0
  z-index: 5
  .number
    width: 100%
    height: @height
    line-height: @height
    box-sizing: border-box
    font-size: .80rem
    border-radius: @border-radius
    position: absolute
    text-align: center
    top: -.10rem
    padding-top: -@top
    background: #feffff
    color: #000
    &.digit-3
      font-size: .60rem
    &.digit-4
      font-size: .44rem
  &.num-1
    background: #60aaf1
    .number
      color: #fff
      background: #66ccff
  &.num-2
    background: #cc547c
    .number
      color: #fff
      background: #ff6881

.up-coming-number
  width: .96rem
  padding: .69rem 0 .15rem
  margin: 0 auto
  background: #CFE6DF
  border-bottom-left-radius: .30rem
  border-bottom-right-radius: @border-bottom-left-radius
  position: relative
  .word
    width: @width
    text-align: center
    position: absolute
    line-height: .40rem
    bottom: -@line-height
    color: #767E8C
    font-size: .32rem
  .tile
    width: .54rem
    height: .75rem
    position: relative
    margin: 0 auto
    .number
      height: .70rem
      line-height: @height
      font-size: .40rem

// all magnific-popup
.white-popup
  position: relative
  background: #FFF
  padding: 20px
  width: auto
  max-width: 500px
  margin: 20px auto

.mfp-fade-from-top
  &.mfp-bg
    opacity: 0
    transition: all 0.3s ease-out
    &.mfp-ready
      opacity: 0.8
    &.mfp-removing
      opacity: 0
  &.mfp-wrap
    .mfp-content
      opacity: 0
      transform: translateY(-100px);
      transition: all 0.3s ease-out
    &.mfp-ready
      .mfp-content
        opacity: 1
        transform: translateY(0px);
    &.mfp-removing
      .mfp-content
        opacity: 0
        transform: translateY(-100px);

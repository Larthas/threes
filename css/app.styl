@import "nib"
@import "normalize-css/normalize.css"
@import "magnific-popup/dist/magnific-popup.css"

@font-face
  font-family: 'Signika';
  font-style: normal;
  font-weight: 400;
  src: local('Signika'), local('Signika-Regular'), url('../font/Signika.woff') format('woff');

html
  font-family: 'Signika', 'Comic Sans MS', 'PT Sans', 'Eras Light ITC', Helvetica, Arial, sans-serif;
  font-size: 100px
  user-select: none

$blue = #66ccff
$pink = #ff6881
$gray = #777e8c

body
  color: $gray
  font-size: 16px

a:link, a:visited
  text-decoration: none
  color: $blue
a:hover
  transition: color 0.2s
  color: $pink

button
a.button
  background: $blue
  border-radius: .10rem
  border: none
  color: #fff
  padding: 5px 10px
  transition: color 0.1s, background 0.15s
  text-decoration: none
  &:hover
    color: @background
    background: #fff
  &.pink
    background: $pink
    color: #fff
    &:hover
      color: @background
      background: #fff
  &.full-size
    display: inline-block
    padding: 10px
    margin: 0 4px
    font-size: 22px
    min-width: 100px

.blue
  color: $blue
.pink
  color: $pink

#wrapper
  max-width: 500px
  margin: 0 auto

#home-view
  padding: 0 10px
  h1
    text-align: center
    font-size: 48px
  .button-play
    display: block
    font-size: 28px
    width: 190px
    padding: 10px
    margin: 0 auto
    text-align: center
  footer
    text-align: center
    padding: 20px 0 30px
    margin-top: 20px
    border-top: 1px dashed $blue

#playing-view
  max-width: 5.33rem
  margin: 0 auto
  header
    height: 2.22rem
    .main
      height: @height
      position: relative
      .button-menu
      .button-help
        position: absolute
        top: 0.80rem
        a
          color: $gray
          text-decoration: none
          font-size: 0.46rem
          &:hover
            color: #cfe6df
      .button-menu
        left: 0.15rem
      .button-help
        right: 0.15rem
    .transition-container .box
      font-size: 0.75rem
      height: @height
      line-height: @height
  footer
    height: .86rem
    .main
      height: @height
      position: relative
    .transition-container .box
      font-size: 0.35rem
      height: @height
      line-height: @height
  header
  footer
    position: relative
    overflow: hidden
    .transition-container
      transition: transform 0.5s
      .box
        width: 100%
        text-align: center

.plate
  background: #cfe6df
  box-sizing: border-box
  height: 7.14rem
  padding: .12rem 0 .10rem
  border-top: .10rem solid #bcd9d9
  border-radius: .36rem
  overflow: hidden
  position: relative
  cursor: move
  .bg .bg-tile
    height: 1.59rem
    width: 1.06rem
    border-radius: .10rem
    background: #bbd9d9
    position: relative
    float: left
    margin: .10rem 0 0 .22rem

.tile-container
  position: absolute
  top: 0
  left: 0
  z-index: 5
  
.tile
  height: 1.59rem
  width: 1.06rem
  background: #ffcc66
  border-radius: .10rem
  .number
    width: 100%
    height: 1.49rem
    line-height: @height
    box-sizing: border-box
    font-size: .80rem
    border-radius: @border-radius
    position: absolute
    text-align: center
    background: #feffff
    color: #000
    &.digit-3
      font-size: .60rem
    &.digit-4
      font-size: .44rem
  &.num-1
    background: #60aaf1
    .number
      color: #fff
      background: $blue
  &.num-2
    background: #cc547c
    .number
      color: #fff
      background: $pink
  &.highlight
    .number
      color: $pink
  .score
    position: absolute
    z-index: 50
    top: .40rem
    transition: all 0.4s
    opacity: 0
    width: 100%
    text-align: center
    font-size: .50rem
    color: #fdc54a
    text-shadow: 0 0 0.03rem #000, 0 0 0.03rem #000, 0 0 0.03rem #000
    &.show-score
      transform: translateY(-.65rem)
      opacity: 1
  &.preview-up
    transform-origin: 0 100%
  &.preview-left
    transform-origin: 100% 0

.up-coming-number
  width: .96rem
  padding: .69rem 0 .15rem
  margin: 0 auto
  background: #CFE6DF
  border-bottom-left-radius: .30rem
  border-bottom-right-radius: @border-bottom-left-radius
  position: relative
  .word
    width: @width
    text-align: center
    position: absolute
    line-height: .40rem
    bottom: -@line-height
    font-size: .32rem
  .tile
    width: .54rem
    height: .75rem
    position: relative
    margin: 0 auto
    .number
      height: .70rem
      line-height: @height
      font-size: .40rem

.button-appstore
  height: 90px
  width: 170px
  margin: 20px auto 0
  background: transparent url('../img/btn_appstore.svg') top left no-repeat
  cursor: pointer
  display: block
  &:hover
    background-position: 0px -90px
  &:active
    background-position: 0px -180px

// magnific-popup
.white-popup
  position: relative
  background: #FFF
  padding: 20px
  width: auto
  max-width: 500px
  margin: 20px auto
  img
    max-width: 100%
  .actions
    text-align: right
    margin: 1em 0
  &.game-over
    text-align: center
    .score
      font-size: 1.5em
      margin: 0 0.1em 0 0.2em
  &.playing-menu
    text-align: center
    .menu
      margin-bottom: 30px

.mfp-fade-from-top
  &.mfp-bg
    opacity: 0
    transition: all 0.3s ease-out
    &.mfp-ready
      opacity: 0.8
    &.mfp-removing
      opacity: 0
  &.mfp-wrap
    .mfp-content
      opacity: 0
      transform: translateY(-100px);
      transition: all 0.3s ease-out
    &.mfp-ready
      .mfp-content
        opacity: 1
        transform: translateY(0px);
    &.mfp-removing
      .mfp-content
        opacity: 0
        transform: translateY(-100px);
